pipeline {
    agent any

    stages {
        stage ('Compile Stage') {
            steps {
               // withMaven(maven : 'Maven_Home') {
               withEnv(["JAVA_HOME=jdk_home", "MAVEN=Maven_Home"]) {
                    bat 'mvn  -f jenkinstest/pom.xml clean install'
                    bat 'mvn --version'
                }
            }
        }
    
    
    stage ('Testing Stage') {

            steps {
                withMaven(maven : 'Maven_Home') {
                    bat 'mvn -f jenkinstest/pom.xml test'
                }
            }
        }
        
         stage ('Deployment Stage') {
            steps {
                withMaven(maven : 'Maven_Home') {
                    bat 'mvn deploy'
                }
            }
        }
   
   }         
}