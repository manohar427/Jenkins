pipeline {
    agent any
    tools { 
        maven 'Maven_Home' 
        jdk 'jdk_home' 
    }
    stages {
        stage ('Initialize') {
            steps {
                bat '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }

        stage ('Build') {
            steps {
                bat 'java -version'
                bat 'mvn --version'
                echo 'This is a minimal pipeline.'
            }
        }
    }
}