pipeline {
    agent any
    tools { 
        maven 'Maven_Home' 
        jdk 'jdk_home' 
    }
    
    stages {
        stage ('Compile Stage') {
            steps {
               // withMaven(maven : 'Maven_Home') {
               withEnv(["JAVA_HOME=jdk_home", "M2_HOME=F:/Softwares_Inst/apache-maven-3.5.3/bin"]) {
                    bat 'echo %jdk_home%'
                    bat 'mvn --version'
                   // bat 'mvn  clean install'
                  
                }
            }
        }
    
    
    stage ('Testing Stage') {

            steps {
                withMaven(maven : 'Maven_Home') {
                    bat 'mvn test'
                }
            }
        }
        
         stage ('Deployment Stage') {
            steps {
                withMaven(maven : 'Maven_Home') {
                    bat 'mvn deploy'
                }
            }
        }
   
   }         
}