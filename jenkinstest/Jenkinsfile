pipeline {
    agent any
    tools { 
        maven 'Maven_Home' 
        jdk 'jdk_home' 
    }
    stages {
        stage ('Initialize') {
            steps {
                bat '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }

        stage ('Version Verifying') {
            steps {
                bat 'java -version'
                bat 'mvn --version'
                echo 'Version Verifying in  pipeline.'
            }
        }
        
        
        stage ('Clean & Compile') {
            steps {              
                bat 'mvn -f jenkinstest/pom.xml clean compile install'
                echo 'Clean and Build is done.'
            }
        }
        
         stage ('Deploy') {
            steps {              
                bat 'mvn -f jenkinstest/pom.xml deploy'
                echo 'Deploy is done.'
            }
        }
        
    }
}